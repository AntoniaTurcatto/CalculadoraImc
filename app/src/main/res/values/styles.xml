<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextTelaInicial">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:digits">0123456789,.</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="texto_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">3</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="texto_2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">2</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="quadradinho">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="BotaoRoxo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TituloRoxo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#9766C0</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

    <style name="TextoRoxo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">#9766C0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>
</resources>